@model ML.Libro
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Libros</h2>

<div class="container">
    <p>Aqui puede ver, editar o agrgar a una Libros</p>
    <p>Para agregar a una Libros presione el boton verde</p>
    <p>Para editar a una Libros presione el boton amarillo</p>
    <p>Para eliminar una Libros presione el boton rojo</p>

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Añadir +", "Form", "LibroController", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <div class="row">

        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Editar</th>
                    <th class="hidden">ID Libro</th>
                    <th>Nombre del Libro</th>
                    <th>Nombre del Autor</th>
                    <th>Numero de Paginas</th>
                    <th>Fecha de Publicacion</th>
                    <th>Nombre de la Editorial</th>
                    <th>Edicion del Libro</th>
                    <th>Genero del Libro</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Libro libro in Model.Libros)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Libro", new { IdLibro = libro.IdLibro })"></a></td>
                        <td class="hidden">@libro.IdLibro</td>
                        <td>@libro.Nombre</td>
                        <td>@libro.Autor.NombreAutor</td>
                        <td>@libro.NumeroPaginas</td>
                        <td>@libro.FechaDePublicacion</td>
                        <td>@libro.Editorial.NombreEditorial</td>
                        <td>@libro.Edicion</td>
                        <td>@libro.Genero.NombreGenero</td>
                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Libro", new { IdLibro = libro.IdLibro })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill" style="color: mintcream"></i></a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>